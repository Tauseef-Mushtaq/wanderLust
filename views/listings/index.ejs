<% layout('layouts/boilerplate') -%>
    
<style>
    #filters {
        display: flex;
        justify-content: flex-start;
        gap: 2rem;
        margin-top: 1rem;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter {
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
        color: black;
        opacity: 0.5;
    }

    .filter:hover {
        opacity: 1;
        color: #fe424d;
    }

    .filter div {
        font-size: 1.3rem;
        margin-top: 1rem;
    }

    .filter p {
        margin-top: 0.2rem;
        font-size: 0.75rem;
    }

    .listing-link {
        text-decoration: none;
        color: inherit;
    }

    .listing-card {
        position: relative;
        overflow: hidden;
    }

    .tax-info {
        display: none;
        position: absolute;
        bottom: 0.5rem;
        right: 0.5rem;
        font-size: 0.8rem;
        color: #555;
    }

    .tax-toggle {
        border: 1px solid #ccc;
        border-radius: 1rem;
        height: 3.2rem;
        padding: 1rem;
        margin-left: auto;
        margin-right: 2rem;
        display: flex;
        align-items: center;
    }

    /* Responsive styles */
    #filters {
        transition: all 0.3s;
    }
    .filters-menu-btn {
        display: none;
        background: #fff;
        border: 1px solid #ccc;
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        cursor: pointer;
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
    @media (max-width: 950.98px) {
        #filters {
            display: none;
            flex-direction: column;
            position: absolute;
            top: 3.5rem;
            left: 0;
            width: 100%;
            background: #fff;
            z-index: 1000;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            padding: 1rem 0;
            gap: 0rem;
        }
        #filters.active {
            display: flex;
        }
        .filters-menu-btn {
            display: block;
        }
    }
</style>
<button class="filters-menu-btn ms-auto" id="filtersMenuBtn"><i class="fa fa-bars"></i> Filters</button>


    <div id="filters">

        <div class="filter" data-category="trending">
            <div><i class="fa-solid fa-fire"></i></div>
           <p>Trending</p>
        </div>
        <div class="filter" data-category="rooms">
            <div><i class="fa-solid fa-bed"></i></div>
           <p>Rooms</p>
        </div>
        <div class="filter" data-category="iconic">
            <div><i class="fa-solid fa-building"></i></div>
           <p>Iconic Cities</p>
        </div>
        <div class="filter" data-category="mountains">
            <div><i class="fa-solid fa-mountain"></i></div>
           <p>Mountains</p>
        </div>
        <div class="filter" data-category="castles">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
           <p>Castles</p>
        </div>
        <div class="filter" data-category="pools">
            <div><i class="fa-solid fa-person-swimming"></i></div>
           <p>Amazing Pools</p>
        </div>
        <div class="filter" data-category="camping">
            <div><i class="fa-solid fa-campground"></i></div>
           <p>Camping</p>
        </div>
        <div class="filter" data-category="arctic">
            <div><i class="fa-solid fa-snowflake"></i></div>
           <p>Arctic</p>
        </div>
        <div class="filter" data-category="boats">
            <div><i class="fa-solid fa-sailboat"></i></div>
           <p>Boats</p>
        </div>
        <div class="filter" data-category="domes">
            <div><i class="fa-solid fa-igloo"></i></div>
           <p>Domes</p>
        </div>


        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>  
            </div>
        </div>

    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) {%>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card col">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing_image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b> 
                    <br>
                     
                    <% if (listing.price != null) { %>
                         &#8360; <%= listing.price.toLocaleString("en-PK") %> / night
                         <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                    <% } %>
                </p>
                 
            </div>
        </div>
        </a>
    <% } %>
    </div>

<script src="/js/new.js"></script>